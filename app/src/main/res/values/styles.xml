<resources>

    <style name="Base" />

    <style name="PokeSpot" />

    <style name="PokeSpot.SearchView" parent="@style/Widget.AppCompat.SearchView.ActionBar">
        <item name="searchIcon">@null</item>
    </style>

    <!-- Download -->
    <style name="PokeSpot.Download" />

    <style name="PokeSpot.Download.Message" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Toolbar -->
    <style name="PokeSpot.Toolbar" parent="Base.Toolbar" />

    <style name="Base.Toolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:background">?colorPrimary</item>
        <item name="title">@string/toolbar_title</item>
    </style>

    <!-- ProgressBar -->
    <style name="Base.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Maps Fab -->
    <style name="PokeSpot.FAB" />

    <style name="Base.FAB" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fabSize">normal</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="PokeSpot.FAB.Add" parent="Base.FAB">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="srcCompat">@drawable/ic_add</item>
    </style>

    <style name="PokeSpot.FAB.Location" parent="Base.FAB">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="srcCompat">@drawable/ic_my_location</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Filter -->
    <style name="Filter" />

    <style name="Filter.Container">
        <item name="android:layout_marginLeft">@dimen/horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/horizontal_margin</item>
    </style>

    <style name="Filter.ProgressBar" parent="Base.ProgressBar" />

    <style name="Filter.Title" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="Filter.Value" parent="TextAppearance.AppCompat.Body2">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="Filter.SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:layout_marginTop">@dimen/space_std</item>
        <item name="android:max">100</item>
    </style>

    <style name="Filter.Item" />

    <style name="Filter.Item.Offset" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/bright_gray</item>
    </style>

    <!-- Browse -->
    <style name="Browse" />

    <style name="Browse.Item" />

    <style name="Browse.Item.Name" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:singleLine">true</item>
    </style>

    <style name="Browse.Item.Number" parent="TextAppearance.AppCompat.Body2" />

    <style name="Browse.ProgressBar" parent="Base.ProgressBar" />

    <!-- Detail Map -->
    <style name="DetailMap" />

    <style name="DetailMap.ProgressBar" parent="Base.ProgressBar" />

    <style name="DetailMap.Name" parent="TextAppearance.AppCompat.Headline">
        <item name="android:layout_marginTop">@dimen/space_std</item>
        <item name="android:layout_marginLeft">@dimen/space_std</item>
    </style>

    <style name="DetailMap.Reliability" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_marginTop">@dimen/space_small</item>
        <item name="android:layout_marginLeft">@dimen/space_std</item>
    </style>

    <style name="DetailMap.LastSeen" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_marginTop">@dimen/space_std</item>
        <item name="android:layout_marginLeft">@dimen/space_std</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DetailMap.Image">
        <item name="android:layout_marginTop">@dimen/pokemon_detail_image_margin</item>
        <item name="android:layout_marginLeft">@dimen/space_std</item>
        <item name="civ_border_color">@color/bright_gray</item>
        <item name="civ_fill_color">@android:color/white</item>
        <item name="civ_border_width">2dp</item>
    </style>

    <style name="DetailMap.Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/space_big</item>
        <item name="android:layout_marginBottom">@dimen/space_std</item>
        <item name="android:layout_marginLeft">@dimen/space_std</item>
        <item name="android:layout_marginRight">@dimen/space_std</item>
        <item name="android:background">@color/bright_gray</item>
    </style>

</resources>
